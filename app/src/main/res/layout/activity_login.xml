<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_lv_item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bizhi"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="桂行"
        android:textColor="@color/red"
        android:textSize="60dp"
        android:textStyle="italic"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:text="GuiLin tour"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:src="@drawable/h"></ImageView>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@null"
                android:maxLength="11"
                android:hint="手机号码"
                android:paddingLeft="14dp"></EditText>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="346dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/red">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginLeft="28dp"
            android:src="@drawable/psw"></ImageView>

        <android.support.design.widget.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="14dp"></EditText>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="346dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/red"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textColor="@color/bg_color"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="300dp"
        >

    </TextView>

    <Button
        android:id="@+id/login"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/buttonstyle"
        android:text="登           录"
        android:textColor="@color/white1"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="136dp"
            android:text="还没有账号?"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="去注册"
            android:textColor="@color/bg_color"
            android:textSize="14dp"></TextView>

    </LinearLayout>


</LinearLayout>
