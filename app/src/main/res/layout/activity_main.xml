<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <FrameLayout
                android:id="@+id/fragment_panel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:showIn="@layout/activity_main"
                tools:context=".activity.MainActivity">
        </FrameLayout>


    <LinearLayout
        android:background="#EDEFF2"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:onClick="onClick"
            android:id="@+id/ll_mainbottom_a"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mainbottom_a"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/selector_home_img"
                android:layout_marginTop="2dp"/>

            <TextView
                    android:id="@+id/tv_mainbottom_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@drawable/selector_bottom_text"
                    android:text="首页"
                    android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
            android:onClick="onClick"
            android:id="@+id/ll_mainbottom_b"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mainbottom_b"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/selector_shequ_img"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_mainbottom_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@drawable/selector_bottom_text"
                android:text="社区"/>
        </LinearLayout>

        <LinearLayout
            android:onClick="onClick"
            android:id="@+id/ll_mainbottom_c"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mainbottom_c"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/selector_person_img"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_mainbottom_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@drawable/selector_bottom_text"
                android:text="个人中心"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>