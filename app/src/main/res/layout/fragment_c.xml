<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:onClick="onClick"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:src="@drawable/head">

            </ImageView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!-- 用户名 -->
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="40dp"
                android:text="鸡你太美"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/user_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:text="ikun篮球"></TextView>

            <ImageView
                android:id="@+id/go_info"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@drawable/jiantou">
            </ImageView>

        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bottom_select"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">
        <!-- 攻略布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@mipmap/shoucang">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/bg_color"
                android:text="我的收藏"
                android:textSize="14dp"></TextView>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="202dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@drawable/jiantou">
            </ImageView>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bottom_select"></View>
        <!-- 攻略布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@mipmap/gonglue">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/option_gray"
                android:text="我的攻略"
                android:textSize="14dp"></TextView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="202dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@drawable/jiantou">
            </ImageView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="1dp"
            android:background="@color/bottom_select"></View>

        <!-- 图片布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@mipmap/tupian">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/option_gray"
                android:text="图片"
                android:textSize="14dp"></TextView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="230dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@drawable/jiantou">
            </ImageView>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_height="1dp"
            android:background="@color/bottom_select"></View>

        <!-- 客服布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@mipmap/kefu">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/option_gray"
                android:text="在线客服"
                android:textSize="14dp"></TextView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="202dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@drawable/jiantou">
            </ImageView>

        </LinearLayout>

        <!-- 分割线布局 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bottom_select"></View>

        <!-- 退出布局 -->
        <LinearLayout
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="18dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@mipmap/tuichu">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textColor="@color/red"
                android:text="退出"
                android:textSize="14dp">
            </TextView>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="230dp"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/user_desc"
                android:src="@drawable/jiantou">
            </ImageView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>